{
  "name": "bsac-schedule-bot",
  "version": "1.0.0",
  "description": "Telegram bot for BSAC schedule",
  "main": "dist/index.js",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "start": "bun run dist/index.js",
    "build": "bun build --target=bun src/index.js --outfile=dist/index.js",
    "dev": "tsx src/index.ts",
    "validate": "ts-node src/scripts/validateEnv.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "check": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "telegram",
    "bot",
    "bsac",
    "schedule"
  ],
  "author": "BSAC Schedule Bot",
  "license": "MIT",
  "dependencies": {
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.1",
    "grammy": "^1.38.1",
    "mongoose": "^8.18.0",
    "openapi-fetch": "^0.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
